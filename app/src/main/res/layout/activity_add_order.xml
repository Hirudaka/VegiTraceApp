<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddOrderActivity">



        <TextView
            android:id="@+id/VegetableNameTextView"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="24sp"

            />

        <Button
            android:id="@+id/addVegetableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:text="Add Vegetable" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="199dp"
            android:layout_height="199dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Order Id"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/OrderIdeditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Supplier"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/SuppliereditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:inputType="text"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Vegetable Type"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/VegiNamespinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Quantity"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/QunatityeditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="87dp"
            android:ems="10"
            android:inputType="text"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Price"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/PriceeditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="115dp"
                android:ems="10"
                android:inputType="text"
                android:text="Name" />


            </LinearLayout>



</LinearLayout>