<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReview">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="132dp"
        android:layout_marginTop="48dp"
        android:text="Add a Review"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/shopno"
        android:layout_width="413dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:hint="shop No"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/farmername"
        android:layout_width="413dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="228dp"
        android:hint="Your Farmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/ownername"
        android:layout_width="413dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="120dp"
        android:hint="Your Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/farmermail"
        android:layout_width="416dp"
        android:layout_height="67dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="408dp"
        android:hint="Farmer Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/review"
        android:layout_width="418dp"
        android:layout_height="71dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:hint="Your Review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/farmermail" />

    <Button
        android:id="@+id/buttonSubmitReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="70dp"
        android:text="Submit Review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review" />

</androidx.constraintlayout.widget.ConstraintLayout>
