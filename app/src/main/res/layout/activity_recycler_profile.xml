<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerProfile">

    <TextView
        android:id="@+id/MyProfileWast"
        android:layout_width="413dp"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:background="@color/DarkGreenBackground"
        android:gravity="center"
        android:text="Recycler Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="33sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MyProfileWast">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameTextView0"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/MyProfileWast"
                android:layout_marginTop="30dp"
                android:text="Name: "
                android:textColor="#000"
                android:textSize="21sp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MyProfileWast"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#000"
            android:textSize="21sp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addressTextView0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_marginTop="30dp"
            android:text="Address: "
            android:textColor="#000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#000"
            android:textSize="21sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phoneTextView0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressTextView"
            android:layout_marginTop="30dp"
            android:text="Phone: "
            android:textColor="#000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressTextView"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#000"
            android:textSize="21sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nicTextView0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneTextView"
            android:layout_marginTop="30dp"
            android:text="NIC: "
            android:textColor="#000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/nicTextView"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneTextView"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#000"
            android:textSize="21sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailTextView0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nicTextView"
            android:layout_marginTop="30dp"
            android:text="Email: "
            android:textColor="#000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nicTextView"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#000"
            android:textSize="21sp" />

    </LinearLayout>

        <Button
            android:id="@+id/recyclerEditPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:text="Edit Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
