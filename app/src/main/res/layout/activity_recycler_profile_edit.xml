<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerProfileEdit">

        <TextView
            android:id="@+id/MyProfileWast"
            android:layout_width="413dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:background="@color/DarkGreenBackground"
            android:gravity="center"
            android:text="Edit My Profile"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="29sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        app:cardCornerRadius="7dp"
        android:backgroundTint="#BCABFDCC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MyProfileWast">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MyProfileWast">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/nameTextView0"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/MyProfileWast"
                android:layout_marginTop="33dp"
                android:text="Name: "
                android:textColor="#000"
                android:textSize="22sp" />


            <EditText
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/MyProfileWast"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:text="edit: "
                android:textColor="#000"
                android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/addressTextView0"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameTextView"
                    android:layout_marginTop="33dp"
                    android:text="Address: "
                    android:textColor="#000"
                    android:textSize="22sp" />

            <EditText
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTextView"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:text="Address: "
                android:textColor="#000"
                android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phoneTextView0"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addressTextView"
                    android:layout_marginTop="33dp"
                    android:text="Phone: "
                    android:textColor="#000"
                    android:textSize="22sp" />

            <EditText
                android:id="@+id/phoneTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addressTextView"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:text="Phone: "
                android:textColor="#000"
                android:textSize="22sp" />
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nicTextView0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneTextView"
            android:layout_marginTop="33dp"
            android:text="NIC: "
            android:textColor="#000"
            android:textSize="22sp" />

            <EditText
                android:id="@+id/nicTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneTextView"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:text="NIC: "
                android:textColor="#000"
                android:textSize="22sp" />

    </LinearLayout>

            <Button
                android:id="@+id/recyclerUpdatePro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:text="Update Profile"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/DarkGreenBackground"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/DarkGreenBackground"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/navHomeUnClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="7dp"
            app:srcCompat="@drawable/baseline_home_24" />

        <ImageView
            android:id="@+id/navBookingUnClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="7dp"
            app:srcCompat="@drawable/baseline_library_books_24" />

        <ImageView
            android:id="@+id/navProfileUnClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="7dp"
            android:background="@color/green"
            app:srcCompat="@drawable/baseline_account_facewhite" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>