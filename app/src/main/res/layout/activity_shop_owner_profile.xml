<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ShopOwnerProfile">

    <TextView
        android:id="@+id/profileNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Owner Name: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit Shop Owner Name" />

    <TextView
        android:id="@+id/profileEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit Email" />

    <TextView
        android:id="@+id/profileAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profileAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit Address" />

    <TextView
        android:id="@+id/profileShopNoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Number: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profileShopNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit Shop Number" />

    <TextView
        android:id="@+id/profileMarketPositionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Position: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profileMarketPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit Market Position" />


</LinearLayout>
