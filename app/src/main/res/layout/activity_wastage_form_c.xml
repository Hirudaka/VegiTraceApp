<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WastageFormC">

    <TextView
        android:id="@+id/BookingsTitle"
        android:layout_width="413dp"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:background="@color/DarkGreenBackground"
        android:text="Bookings"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookingconfirmtext"
        android:layout_width="314dp"
        android:layout_height="92dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="62dp"
        android:text="Do You Want To Confirm Your Pickup ?"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BookingsTitle" />

    <Button
        android:id="@+id/bookingconfirm1"
        android:layout_width="116dp"
        android:layout_height="51dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="116dp"
        android:text="Yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookingconfirmtext" />

    <Button
        android:id="@+id/bookingconfirm2"
        android:layout_width="116dp"
        android:layout_height="51dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="56dp"
        android:text="No"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookingconfirm1" />

    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/DarkGreenBackground"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/navHomeUnClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="7dp"
            app:srcCompat="@drawable/baseline_home_24" />

        <ImageView
            android:id="@+id/navBookingUnClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="7dp"
            app:srcCompat="@drawable/baseline_library_books_24" />

        <ImageView
            android:id="@+id/navProfileUnClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="7dp"
            app:srcCompat="@drawable/baseline_account_facewhite" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>