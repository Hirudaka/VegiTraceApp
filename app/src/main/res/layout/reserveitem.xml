<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp">



    <TextView
        android:id="@+id/OIdtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Id"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Vegimage"
            android:layout_width="154dp"
            android:layout_height="190dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp" />

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/FtextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Shop Owner:"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Ownertext"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Shopowner"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/VtextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:text="Vegitable:"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Vegtext"
                    android:layout_width="146dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:text="Vegitable"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/PtextView"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Price:"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Pricetext"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Price"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/QtextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Quantity:"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Quanttext"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Quantity"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/SView"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:text="Status:"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Statustext"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Status"
                    android:textSize="20sp" />
            </LinearLayout>


            <Button
                android:id="@+id/removebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginBottom="10dp"
                android:text="Remove" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView >